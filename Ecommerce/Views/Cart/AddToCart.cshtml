 @model Ecommerce.ViewModels.CartVM


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./assets/styles/bootstrap.min.css">
    <link href="~/css/AddToCart.css" rel="stylesheet" />
</head>
<body>

    <section style=" height:83vh;width:100%; ">
        <div class="container d-flex justify-content-center align-items-center" style="height:inherit;">
            <div class="form_div">
                <div class="Left text-center">
                    <h2>Add To Cart</h2>
                    <hr />
                    <img style="width:12rem; height:10rem; border-radius:.5rem" class="productImage" src="~/Images/@ViewBag.product.Photo" alt="Alternate Text" />
                </div>

                <div style="width:60%">
                    <h2>@ViewBag.product.Name</h2>
                    <h5 style="color:cadetblue">Brand: @ViewBag.product.Brand.Name</h5>

                    <div class="d-flex align-items-center gap-1">
                        <h4>$ @ViewBag.product.Price</h4>
                        <del>$@(ViewBag.product.Price * 1.5)</del>
                    </div>
                    <br />
                    <form asp-action="AddToCart">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" value="@ViewData["UserId"]" asp-for="UserId" class="form-control" />

                        </div>
                        <div class="form-group">
                            <input type="hidden" value="@ViewBag.product.Id" asp-for="ProductId" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control"/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add To Cart" class="btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        </section>



        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

</body>
</html>