@model Ecommerce.ViewModels.ProductVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./assets/styles/all.min.css">
    <link rel="stylesheet" href="./assets/styles/bootstrap.min.css">
    <link href="~/css/productCreate.css" rel="stylesheet" />
</head>
<body>

    @{
        SelectList Brands = new SelectList(ViewBag.Brands, "Id", "Name");
        ViewData["Title"] = "Create";
    }
    <section style="padding-top:73px; height:100vh;width:100%; ">
        <div class="container d-flex justify-content-center align-items-center" style="height:inherit;">
            <div class="form_div">
                <div class="text-center">
                    <h2>Create Product</h2>
                    <hr/>
                    <img style="width:15rem ; height:15rem" src="~/Images/th5.jpg" alt="Alternate Text" />
                </div>
                
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo" class="control-label"></label>
                        <input asp-for="Photo" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandId" class="control-label"></label>
                        <select class="form-control" asp-for="BrandId" asp-items="Brands"></select>
                    </div>
                    <div class="form-group" style="padding-top:.5rem">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

    </sect>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>