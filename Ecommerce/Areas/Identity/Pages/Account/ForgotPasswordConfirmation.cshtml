</head>

<body>

    <section class="login">
        <div class="login-form">
            <h1>@ViewData["Title"]</h1>
            <img src="~/loginImg/th4.jpg"></img>
            <p>
                Please check your email to reset your password.
            </p>

        </div>
    </section>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>

